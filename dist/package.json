{
  "name": "guangyizhou",
  "version": "1.1.0",
  "description": "A minimal Electron application",
  "main": "./dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager ./ --arch=x64 --icon=logo.ico  --overwrite"
  },
  "repository": "https://github.com/xingyuelongchen/projecta --all",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.2"
  }, 
  "build": {
    "asar":false,
    "productName": "广艺舟",
    "appId": "com.guangyizhou.pc",
    "copyright": "青龙",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "../public/favicon.ico",
      "uninstallerIcon": "../public/favicon.ico",
      "installerHeaderIcon": "../public/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "广艺舟"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:3000/app"
      }
    ],
    "files": [
      "./dist/**"
    ],
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}